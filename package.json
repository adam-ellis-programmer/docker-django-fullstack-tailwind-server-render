{
  "name": "django-feed-app",
  "version": "1.0.0",
  "description": "Social feed app with Django and Tailwind CSS",
  "scripts": {
    "dev": "tailwindcss -i ./static/css/input.css -o ./static/css/output.css --watch",
    "build": "tailwindcss -i ./static/css/input.css -o ./static/css/output.css --minify",
    "dev-with-sync": "concurrently \"npm run dev\" \"browser-sync start --proxy 'localhost:8000' --files 'static/css/output.css, **/*.html'\"",
    "install-deps": "npm install",
    "watch-css": "tailwindcss -i ./static/css/input.css -o ./static/css/output.css --watch"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.5",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "django",
    "tailwind",
    "social-media",
    "feed"
  ]
}
